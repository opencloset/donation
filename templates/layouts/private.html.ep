<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>열린옷장 &middot; <%= title %></title>
    <link rel="stylesheet" href="/assets/components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/components/opencloset.css/dist/css/opencloset.min.css">
    % for my $css (@$csses) {
    <link rel="stylesheet" href="<%= $css %>">
    % }
    <link rel="stylesheet" href="/assets/dist/css/screen.min.css">
  </head>
  <body>
    <div class="container">
      <div id="content">
        %= include '_includes/header';
        <form class="form-inline pull-right" action="<%= url_for('forms') %>" method="GET">
          <input class="form-control" name="q" type="text" placeholder="이름, 전화번호, 이메일">
          <button class="btn btn-primary" type="submit">검색</button>
        </form>
        <ul class="list-inline">
          % my $status = param('s') || '';
          <li><a href="<%= url_for('forms') %>"><span class="label label-info">전체보기</span></a></li>
          <li><a href="<%= url_for('forms')->query(s => 'null') %>"><%= status2label(undef, $status eq 'null') %></a></li>
          % for my $s (qw/accepted waiting delivering delivered returning returned cancel/) {
          <li><a href="<%= url_for('forms')->query(s => $s) %>"><%= status2label($s, $status eq $s) %></a></li>
          % }
        </ul>
        <hr>
        %= content
      </div>
    </div>
    <script src="/assets/components/jquery/dist/jquery.min.js"></script>
    <script src="/assets/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/assets/components/underscore/underscore.js"></script>
    % for my $js (@$jses) {
    <script src="<%= $js %>"></script>
    % }
  </body>
</html>
